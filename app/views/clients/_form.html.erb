<%= form_for @client, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Client</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :rfc, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :rfc, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :street, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :street, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :num_ext, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :num_ext, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :num_int, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :num_int, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :suburb, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :suburb, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :township, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :township, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :state, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :state, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :cp, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :cp, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :logo_emp, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :logo_emp, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :qr, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :qr, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :id_user, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :id_user, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', clients_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
