<h1>Clients</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>RFC</th>
    <th>Street</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= link_to client.name, client_path(client) %></td>
        <td><%= link_to client.rfc, client_path(client) %></td>
        <td><%= link_to client.street, client_path(client) %></td>
        <td>
          <%= link_to 'Show', client_path(client), :class => 'btn btn-mini' %>
          <%= link_to 'Edit', edit_client_path(client), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', client_path(client), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New', new_client_path, :class => 'btn btn-primary' %>
